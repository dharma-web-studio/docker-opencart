bin/setup-domain ${OPENCART_DOMAIN}
bin/cli echo "Setup domain name has been completed"

# Move storage directory
# bin/mv-storage

# Rename admin directory to backoffice
bin/mv-admin admin access

# Fix owns
bin/fixowns

# Install and activate extensions by CLI

